@model InvoiceGen.Models.InvoiceModel

@{
    ViewData["Title"] = "Invoice Generator";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-section {
            background: #f8f9fa;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .invoice-preview {
            border: 1px solid #dee2e6;
            padding: 20px;
            background: white;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-4">Invoice Generator</h2>
            </div>
        </div>

        <form asp-action="GenerateInvoice" method="post">
            <div class="row">
                <div class="col-md-6">
                    <!-- Invoice Details Section -->
                    <div class="form-section">
                        <h4>Invoice Details</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InvoiceNumber" class="form-label">Invoice Number</label>
                                    <input asp-for="InvoiceNumber" class="form-control" />
                                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InvoiceDate" class="form-label">Invoice Date</label>
                                    <input asp-for="InvoiceDate" type="date" class="form-control" />
                                    <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bill To Section -->
                    <div class="form-section">
                        <h4>Bill To</h4>
                        <div class="mb-3">
                            <label asp-for="BillToName" class="form-label">Customer Name</label>
                            <input asp-for="BillToName" class="form-control" />
                            <span asp-validation-for="BillToName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BillToAddress" class="form-label">Address</label>
                            <textarea asp-for="BillToAddress" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BillToCity" class="form-label">City</label>
                                    <input asp-for="BillToCity" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BillToState" class="form-label">State</label>
                                    <input asp-for="BillToState" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BillToCountry" class="form-label">Country</label>
                            <input asp-for="BillToCountry" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BillToContact" class="form-label">Contact Number</label>
                                    <input asp-for="BillToContact" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BillToEmail" class="form-label">Email</label>
                                    <input asp-for="BillToEmail" type="email" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Company Details Section - Now Read-only -->
                    <div class="form-section">
                        <h4>Company Details</h4>
                        <div class="mb-3">
                            <label class="form-label">Company Name</label>
                            <input type="text" value="Anil Associates T/As Aussizz Group" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Company Address</label>
                            <textarea class="form-control" rows="4" readonly>1st Floor, 105 Atlantic,
Near Gordia Circle,
VADODARA-390020,
GUJARAT
INDIA</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">GST Number</label>
                            <input type="text" value="24GOIPS7235K1ZC" class="form-control" readonly />
                        </div>
                        <small class="text-muted">Company details are fixed for this invoice template.</small>
                    </div>

                    <!-- Service Details Section -->
                    <div class="form-section">
                        <h4>Service Details</h4>
                        <div class="mb-3">
                            <label class="form-label">Service Description</label>
                            <input type="text" value="Visitor Visa - Australia (600) Tourist Stream" class="form-control" readonly />
                            <small class="text-muted">This service description is fixed for this invoice template.</small>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price (INR)</label>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="TaxableAmount" class="form-label">Taxable Amount (INR)</label>
                                    <input asp-for="TaxableAmount" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="TaxableAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Tax Rate (%)</label>
                                    <input type="number" value="18" class="form-control" readonly />
                                    <small class="text-muted">Tax rate is fixed at 18%</small>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReceivedAmount" class="form-label">Received Amount (INR)</label>
                            <input asp-for="ReceivedAmount" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="ReceivedAmount" class="text-danger"></span>
                            <small class="text-muted">Enter the amount already received from the customer</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Disclaimer" class="form-label">Disclaimer Text</label>
                            <textarea asp-for="Disclaimer" class="form-control" rows="3" placeholder="Enter any disclaimer text here..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Refund Policy</label>
                            <div class="form-check form-switch">
                                <input asp-for="IsRefundable" class="form-check-input" type="checkbox" role="switch" id="refundableToggle">
                                <label class="form-check-label" for="refundableToggle" id="refundableLabel">
                                    Nonrefundable
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary Section -->
            <div class="row">
                <div class="col-12">
                    <div class="form-section">
                        <h4>Invoice Summary</h4>
                        <div class="row">
                            <div class="col-md-2">
                                <p><strong>Price:</strong> ₹<span id="priceAmount">0.00</span></p>
                            </div>
                            <div class="col-md-2">
                                <p><strong>Taxable Amount:</strong> ₹<span id="taxableAmount">0.00</span></p>
                            </div>
                            <div class="col-md-2">
                                <p><strong>Tax Amount:</strong> ₹<span id="taxAmount">0.00</span></p>
                            </div>
                            <div class="col-md-2">
                                <p><strong>CGST:</strong> ₹<span id="cgstAmount">0.00</span></p>
                            </div>
                            <div class="col-md-2">
                                <p><strong>SGST:</strong> ₹<span id="sgstAmount">0.00</span></p>
                            </div>
                            <div class="col-md-2">
                                <p><strong>Net Amount:</strong> ₹<span id="netAmount">0.00</span></p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <p><strong>Received Amount:</strong> ₹<span id="receivedAmount">0.00</span></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Due Amount:</strong> ₹<span id="dueAmount">0.00</span></p>
                            </div>
                        </div>
                   
                    </div>
                </div>
            </div>

            <!-- Generate Button -->
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Generate PDF Invoice</button>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function calculateAmounts() {
            const price = parseFloat(document.querySelector('[name="Price"]').value) || 0;
            const taxableAmount = parseFloat(document.querySelector('[name="TaxableAmount"]').value) || 0;
            const receivedAmount = parseFloat(document.querySelector('[name="ReceivedAmount"]').value) || 0;
            const taxRate = 18; // Fixed tax rate

            const taxAmount = (taxableAmount * taxRate) / 100;
            const cgstAmount = taxAmount / 2;
            const sgstAmount = taxAmount / 2;
            const netAmount = taxableAmount + taxAmount;
            const dueAmount = netAmount - receivedAmount;

            document.getElementById('priceAmount').textContent = price.toFixed(2);
            document.getElementById('taxableAmount').textContent = taxableAmount.toFixed(2);
            document.getElementById('taxAmount').textContent = taxAmount.toFixed(2);
            document.getElementById('cgstAmount').textContent = cgstAmount.toFixed(2);
            document.getElementById('sgstAmount').textContent = sgstAmount.toFixed(2);
            document.getElementById('receivedAmount').textContent = receivedAmount.toFixed(2);
            document.getElementById('dueAmount').textContent = dueAmount.toFixed(2);
            document.getElementById('netAmount').textContent = netAmount.toFixed(2);
        }

        document.querySelector('[name="Price"]').addEventListener('input', calculateAmounts);
        document.querySelector('[name="TaxableAmount"]').addEventListener('input', calculateAmounts);
        document.querySelector('[name="ReceivedAmount"]').addEventListener('input', calculateAmounts);

        // Toggle refundable status
        const refundableToggle = document.getElementById('refundableToggle');
        const refundableLabel = document.getElementById('refundableLabel');

        refundableToggle.addEventListener('change', function () {
            if (this.checked) {
                refundableLabel.textContent = 'Refundable';
                refundableLabel.className = 'form-check-label text-success';
            } else {
                refundableLabel.textContent = 'Nonrefundable';
                refundableLabel.className = 'form-check-label text-danger';
            }
        });

        // Initial label setup
        if (refundableToggle.checked) {
            refundableLabel.textContent = 'Refundable';
            refundableLabel.className = 'form-check-label text-success';
        } else {
            refundableLabel.textContent = 'Nonrefundable';
            refundableLabel.className = 'form-check-label text-danger';
        }

        // Initial calculation
        calculateAmounts();
    </script>
</body>
</html>